<%= form_for(@case_log, html: {class: "form-horizontal form-model", role: "form"}) do |f| %>
  <div class="form-group">
      <%= f.label :title, class: "required col-sm-2 control-label" %>
      <div class="col-sm-10">
          <%= f.text_field :title, class: "form-control" %>
      </div>
  </div>

<div style="padding: 3px;">

  <span> Patient Information:</span>
  <hr style="margin-top: 0px;">
  <div class="form-group">
    <%= f.label :patient_name, class: "required col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.text_field :patient_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :patient_date_of_birth, class: " col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.date_select(:patient_date_of_birth,:start_year => 2014,:end_year => 1920)%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :patient_gender, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.radio_button :patient_gender, 1, checked: @case_log.patient_gender == 1 %> Male
    <%= f.radio_button :patient_gender, 2, checked: @case_log.patient_gender == 2 %> Female
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: " col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :diagnosis, class: " col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.text_area :diagnosis, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :treatment, class: " col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.text_area :treatment, class: "form-control" %>
    </div>
  </div>
</div>
  <div class="actions form-group">
    <div class="col-sm-10 col-sm-offset-2" style="width: 400px;">
      <%= f.submit :"Submit", class: "btn btn-block btn-info", style:"width: 80px; display: inline;"%>
      <%= link_to 'Cancel', case_logs_path, class:"btn btn-block btn-danger", style:"width: 80px; display: inline;" %>
    </div>
  </div>
<% end %>