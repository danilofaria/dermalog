<%= form_for(@case_log) do |f| %>
  <% if @case_log.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@case_log.errors.count, "error") %> prohibited this case_log from being saved:</h2>

      <ul>
      <% @case_log.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, class: :required %><br>
    <%= f.text_field :title %>
  </div>

  <p> Patient Information:</p>
  <div class="field">
    <%= f.label :patient_name, class: :required %><br>
    <%= f.text_field :patient_name %>
  </div>
  <div class="field">
    <%= f.label :patient_date_of_birth %><br>
    <%= f.date_select :patient_date_of_birth %>
  </div>
  <div class="field">
    <%= f.label :patient_gender %><br>
    <%= f.radio_button :patient_gender, 1, checked: @case_log.patient_gender == 1 %> Male
    <%= f.radio_button :patient_gender, 2, checked: @case_log.patient_gender == 2 %> Female
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :diagnosis %><br>
    <%= f.text_field :diagnosis %>
  </div>
  <div class="field">
    <%= f.label :treatment %><br>
    <%= f.text_field :treatment %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
