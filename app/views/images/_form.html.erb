<%= form_for([@case_log, @image], :html => { :multipart => true }) do |f| %>
  <% if @image.errors.any? %>
    <div id="error_explanation">
      <strong><%= pluralize(@image.errors.count, "error") %> prohibited this image from being saved:</strong>

      <ul>
      <% @image.errors.full_messages.each do |message| %>
        <% if message.to_s.downcase.include? "url" %>
          <li>Image could not be uploaded</li>
        <% else %>
          <li><%= message %><%= @image[:url] %></li>
        <% end %>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, class: :required %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label for="upload_file">Select File</label><br>
    <%= file_field 'upload', 'datafile' %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
