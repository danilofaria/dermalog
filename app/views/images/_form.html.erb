<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
<%= form_for([@case_log, @image], :html => { :multipart => true }) do |f| %>
  <% if @image.errors.any? %>
    <div id="error_explanation">
      <strong><%= pluralize(@image.errors.count, "error") %> prohibited this image from being saved:</strong>

      <ul>
      <% @image.errors.full_messages.each do |message| %>
        <% if message.to_s.downcase.include? "url" %>
          <li>Image could not be uploaded</li>
        <% else %>
          <li><%= message %><%= @image[:url] %></li>
        <% end %>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: :required %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <label for="upload_datafile">Select File</label>
    <%= file_field 'upload', 'datafile', class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-info" %>
  </div>

<% end %>

  </div>
</div>
